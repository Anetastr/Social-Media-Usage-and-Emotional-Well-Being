import unittest
from table import Table

class TestTable(unittest.TestCase):

    def setUp(self):
        self.header = [
            "age", "gender", "platform", "daily_usage_time_spent",
            "likes_received", "comments_received", "post_per_day",
            "message_sent", "emotional_state"
        ]
        self.data = [
            [25, "female", "Instagram", 120, 200, 50, 2, 40, "Happiness"],
            [30, "male", "Facebook", 90, 100, 20, 1, 15, "Neutral"],
            [22, "female", "TikTok", 180, 300, 80, 3, 70, "Anxiety"]
        ]
        self.table = Table(self.header, self.data)

    def test_shape(self):
        self.assertEqual(self.table.shape(), (3, 9))

    def test_columns(self):
        self.assertEqual(self.table.columns(), self.header)

    def test_get_feature_data(self):
        expected = [
            [25, "female", "Instagram", 120, 200, 50, 2, 40],
            [30, "male", "Facebook", 90, 100, 20, 1, 15],
            [22, "female", "TikTok", 180, 300, 80, 3, 70]
        ]
        self.assertEqual(self.table.get_feature_data(), expected)

    def test_get_labels(self):
        expected = ["Happiness", "Neutral", "Anxiety"]
        self.assertEqual(self.table.get_labels(), expected)

if __name__ == '__main__':
    unittest.main()
